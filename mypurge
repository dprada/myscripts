
#!/bin/bash

# Patrones de archivos a eliminar (puedes agregar mÃ¡s)
PATTERNS=("*~" "*.pyrep.bak" "#*" "*.pyc")

# Verifica si se pasÃ³ el argumento --force para eliminar sin preguntar
FORCE=false
if [[ "$1" == "--force" ]]; then
    FORCE=true
fi

# Buscar y eliminar archivos que coincidan con los patrones
echo "Buscando archivos para eliminar..."
for pattern in "${PATTERNS[@]}"; do
    find . -type f -name "$pattern" | while read -r file; do
        if [ "$FORCE" = true ]; then
            rm "$file"
            echo "Eliminado: $file"
        else
            echo "Â¿Eliminar '$file'? (s/n)"
            read -r confirm
            if [[ "$confirm" == "s" || "$confirm" == "y" ]]; then
                rm "$file"
                echo "Eliminado: $file"
            else
                echo "Omitido: $file"
            fi
        fi
    done
done

echo "Limpieza completa. ðŸš€"
