#!/bin/bash

# Patrones de archivos a eliminar (puedes agregar mÃ¡s)
PATTERNS=("*~" "*.pyrep.bak" "#*" "*.pyc")

# Verifica si se pasÃ³ el argumento --force para eliminar sin preguntar
FORCE=false
if [[ "$1" == "--force" ]]; then
    FORCE=true
fi

echo "mypurge: Buscando archivos para eliminar... ðŸš€"

# Iterar sobre cada patrÃ³n y preguntar si se quiere eliminar archivos de ese tipo
for pattern in "${PATTERNS[@]}"; do
    echo "Â¿Quieres buscar y eliminar archivos que coincidan con '$pattern'? (s/n)"
    read -r confirm_pattern

    if [[ "$confirm_pattern" == "s" || "$confirm_pattern" == "y" ]]; then
        # Buscar archivos con ese patrÃ³n
        files_found=$(find . -type f -name "$pattern")

        if [[ -z "$files_found" ]]; then
            echo "No se encontraron archivos con el patrÃ³n '$pattern'."
            continue
        fi

        echo "Se encontraron los siguientes archivos:"
        echo "$files_found"
        echo "Â¿Quieres proceder a eliminarlos? (s/n)"
        read -r confirm_delete

        if [[ "$confirm_delete" == "s" || "$confirm_delete" == "y" ]]; then
            echo "Eliminando archivos con patrÃ³n '$pattern'..."
            for file in $files_found; do
                if [ "$FORCE" = true ]; then
                    rm "$file"
                    echo "Eliminado: $file"
                else
                    echo "Â¿Eliminar '$file'? (s/n)"
                    read -r confirm_file
                    if [[ "$confirm_file" == "s" || "$confirm_file" == "y" ]]; then
                        rm "$file"
                        echo "Eliminado: $file"
                    else
                        echo "Omitido: $file"
                    fi
                fi
            done
        else
            echo "Omitiendo eliminaciÃ³n de archivos con patrÃ³n '$pattern'."
        fi
    else
        echo "Omitiendo bÃºsqueda de archivos con patrÃ³n '$pattern'."
    fi
done

echo "mypurge: Limpieza completa. âœ…"

